{
  "name": "oauth2",
  "description": "OAuth2 client for Foxx.",
  "author": "ArangoDB GmbH",
  "version": "2.0.0",
  "license": "Apache License, Version 2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/arangodb/foxx-oauth2.git"
  },
  "contributors": [
    {
      "name": "Alan Plum",
      "email": "me@pluma.io"
    }
  ],
  "exports": "exports.js",
  "defaultDocument": "",
  "configuration": {
    "authEndpoint": {
      "type": "string",
      "description": "The provider's authorization endpoint.",
      "required": true
    },
    "tokenEndpoint": {
      "type": "string",
      "description": "The provider's token endpoint",
      "required": true
    },
    "refreshEndpoint": {
      "type": "string",
      "description": "The provider's refresh token endpoint.",
      "required": false
    },
    "activeUserEndpoint": {
      "type": "string",
      "description": "The provider's endpoint for fetching details about the current user.",
      "required": false
    },
    "clientId": {
      "type": "string",
      "description": "The application's Client ID (or App ID) for the provider.",
      "required": true
    },
    "clientSecret": {
      "type": "string",
      "description": "The application's Client Secret (or App Secret) for the provider.",
      "required": true
    }
  }
}